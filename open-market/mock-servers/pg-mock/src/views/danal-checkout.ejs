<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>다날 결제 (Mock)</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }
    .container {
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
      max-width: 400px;
      width: 100%;
      overflow: hidden;
    }
    .header {
      background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
      color: white;
      padding: 24px;
      text-align: center;
    }
    .header h2 {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 8px;
    }
    .logo {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 8px;
    }
    .badge {
      background: rgba(255, 255, 255, 0.2);
      color: white;
      padding: 4px 12px;
      border-radius: 12px;
      font-size: 12px;
      display: inline-block;
    }
    .payment-info {
      padding: 24px;
    }
    .info-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 16px 0;
      border-bottom: 1px solid #f0f0f0;
    }
    .info-row:last-child {
      border-bottom: none;
    }
    .info-label {
      color: #666;
      font-size: 14px;
    }
    .info-value {
      color: #333;
      font-size: 14px;
      font-weight: 500;
    }
    .amount {
      font-size: 28px;
      font-weight: bold;
      color: #f5576c;
    }
    .buttons {
      padding: 0 24px 24px;
      display: flex;
      gap: 12px;
    }
    button {
      flex: 1;
      padding: 16px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }
    .pay-btn {
      background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
      color: white;
    }
    .pay-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(245, 87, 108, 0.3);
    }
    .cancel-btn {
      background: #f5f5f5;
      color: #666;
    }
    .cancel-btn:hover {
      background: #e0e0e0;
    }
    .footer {
      padding: 16px 24px;
      background: #f9f9f9;
      text-align: center;
      font-size: 12px;
      color: #999;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="logo">DANAL</div>
      <h2>다날 Mock 결제창</h2>
      <span class="badge">테스트 환경</span>
    </div>

    <div class="payment-info">
      <div class="info-row">
        <span class="info-label">TID</span>
        <span class="info-value"><%= tid %></span>
      </div>
      <div class="info-row">
        <span class="info-label">주문번호</span>
        <span class="info-value"><%= orderId %></span>
      </div>
      <div class="info-row">
        <span class="info-label">상품명</span>
        <span class="info-value"><%= orderName %></span>
      </div>
      <div class="info-row">
        <span class="info-label">결제금액</span>
        <span class="amount"><%= amount.toLocaleString() %>원</span>
      </div>
    </div>

    <div class="buttons">
      <button class="cancel-btn" onclick="cancel()">취소</button>
      <button class="pay-btn" onclick="pay()">결제하기</button>
    </div>

    <div class="footer">
      Mock PG Server v1.0 | Port 8081
    </div>
  </div>

  <script>
    function pay() {
      const returnUrl = '<%= returnUrl %>';
      const params = new URLSearchParams({
        tid: '<%= tid %>',
        orderNo: '<%= orderId %>',
        amount: '<%= amount %>'
      });
      window.location.href = `${returnUrl}?${params.toString()}`;
    }

    function cancel() {
      const returnUrl = '<%= returnUrl %>';
      const params = new URLSearchParams({
        result: '9001',
        message: '사용자가 결제를 취소했습니다'
      });
      window.location.href = `${returnUrl}?${params.toString()}`;
    }
  </script>
</body>
</html>
